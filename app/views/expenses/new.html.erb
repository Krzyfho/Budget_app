<h1><%= t('expenses.new') %></h1>

<%= form_with model: @expense do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @expense.errors.full_messages_for(:name).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
    <% @expense.errors.full_messages_for(:price).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :paid_on %><br>
    <%= form.date_field :paid_on %>
    <% @expense.errors.full_messages_for(:paid_on).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>