<!DOCTYPE html>
<html>
  <head>
    <title><%= t('budget_app') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <%= link_to t('budget_app'), root_path, id: "logo" %>
        <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav justify-content-end">
            <% if current_user %>
              <li class="nav-item">Current User: <%= current_user.email %></li>
              <li class="btn btn-light"><%= link_to t('sign_out'), destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li class="nav-item"><%= I18n.t('sign.up_now') %>></li>
              <li class="btn btn-light"><%= link_to t('sign_up'), new_user_registration_path %></li>
              <li class="btn btn-light"><%= link_to t('sign_in'), new_user_session_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
